################################################################################
FROM	"alejandrocolomar/nginx:1.6.1"	AS nginx
################################################################################
RUN									\
	ln -svT	/usr/local/etc/nginx/nginx.conf				\
		/etc/nginx/nginx.conf					&& \
	ln -svT	/usr/local/etc/nginx/conf.d				\
		/etc/nginx/conf.d

################################################################################
COPY	srv/	/srv/
################################################################################
