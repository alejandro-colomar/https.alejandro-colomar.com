################################################################################
FROM	"alpine:3.12.0"	AS git
################################################################################
RUN									\
	apk add	--no-cache --upgrade git

################################################################################
RUN									\
	git clone							\
		--single-branch						\
		--branch "master"					\
		https://github.com/alejandro-colomar/www.git		\
		/usr/local/src/www

################################################################################
FROM	"alejandrocolomar/nginx:1.3.1"	AS nginx
################################################################################
## Copy web files
COPY	--from=git	/usr/local/src/www/srv/				\
			/srv

################################################################################
